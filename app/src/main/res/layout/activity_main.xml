<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.juangustavo.stahlbrasil.MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#8f8f8f8f">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <RelativeLayout
                android:id="@+id/box1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="#35A9E4">
                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/stahl"
                        tools:ignore="MissingConstraints" />

                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:src="@drawable/menu" />
                </RelativeLayout>
                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="match_parent"
                    android:layout_height="330dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="70dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/planetaterra" />

                <TextView

                    android:layout_width="356dp"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/imageView4"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginBottom="73dp"
                    android:gravity="left"
                    android:paddingLeft="30dp"
                    android:text="A Stahl é líder em produtos químicos de processo para couro e outros substratos para o setor automotivo (e outros de transporte), aplicações industriais, design de interiores, lazer e estilo de vida e vestuário e acessórios, entre outros."
                    android:textColor="#FFF"
                    android:textSize="20sp" />
            </RelativeLayout>

        <RelativeLayout
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:orientation="vertical"
             android:paddingTop="100sp">

             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:paddingLeft="50sp"
                 android:text="Sobre a Stahl"
                 android:textColor="#FFF"
                 android:textSize="30sp"
                 tools:ignore="MissingConstraints" />

        </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/box1"
        android:orientation="vertical"
        android:paddingTop="8dp">

        <LinearLayout
            android:id="@+id/box2"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="25dp"
                android:layout_height="20dp"
                android:layout_weight="5"
                android:src="@drawable/phonereceiver" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="25dp"
                android:layout_weight="5"
                android:layout_height="20dp"
                android:layout_marginTop="6dp"
                android:src="@drawable/circularclocktool" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="25dp"
                android:layout_weight="5"
                android:layout_height="22dp"
                android:layout_marginTop="6dp"
                android:src="@drawable/placeholder" />

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="25dp"
                android:layout_height="20dp"
                android:layout_marginTop="2dp"
                android:src="@drawable/note" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toRightOf="@id/box2">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text="Endereço:R. Boa Vista, 1832 - Boa Vista, Portão - RS, 93180-000"
                android:textColor="#35A9E4"
                android:textSize="14.8sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_height="20dp"
                android:text="Telefone de Contato: (51)3304-9900"
                android:textColor="#35A9E4"
                android:textSize="15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginTop="4dp"
                android:text="E-mail: stahlbrasil@stahl.com"
                android:textColor="#35A9E4"
                android:textSize="15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginTop="4dp"
                android:text="Aberto de Segunda a Sexta das 08:00 as 17:30"
                android:textColor="#35A9E4"
                android:textSize="15sp" />
        </LinearLayout>
    </RelativeLayout>
        </RelativeLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>